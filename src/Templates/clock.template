<informationscreen>
	<screen>
		<name>[% screenname %]</name>
		<time>[% visibilitytime %]</time>
		[% IF screenorder %]<order>[% screenorder %]</order>[% END %]
		<layout>clock</layout>
		<style>[% IF title1 %]InformationScreenClockAndNowPlaying[% ELSE %]InformationScreenClock[% END %]</style>
		<skin>getClockStyles</skin>
		<items>
			[% IF title1 %]
			<group>
				<id>playingtitle</id>
				<item>
					<id>playingtitle</id>
					<type>label</type>
					<preprocessing>titleformat</preprocessing>
					<preprocessingData>[% title1 %][% IF title2 %]\n[% title2 %][% END %]</preprocessingData>
				</item>
			</group>
			[% END %]
			<group>
				<id>time</id>
				<item>
					<id>time</id>
					<type>label</type>
					<preprocessing>datetime</preprocessing>
					<preprocessingData>[% timeformat %]</preprocessingData>
				</item>
			</group>
			<group>
				<id>date</id>
				<item>
					<id>date</id>
					<type>label</type>
					<preprocessing>datetime</preprocessing>
					<preprocessingData>[% dateformat %]</preprocessingData>
				</item>
			</group>
		</items>
	</screen>
</informationscreen>

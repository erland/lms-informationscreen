<?xml version="1.0" encoding="utf-8"?>
<informationscreen>
	<template>
		<name>Digital Clock (7.4 and later)</name>
		<description>Digital Clock with some different options</description>
		<parameter type="text" id="screenname" name="Screen name" value="Digital Clock"/>
		<parameter type="text" id="screengroup" name="Screen configuration group" value=""/>
		<parameter type="text" id="screenorder" name="Screen order" value="50"/>
		<parameter type="text" id="visibilitytime" name="Visible number of seconds" value="5"/>
		<parameter type="checkboxes" id="includedstates" name="Only show in state" value="0" data="play=Playing,idle=Idle,off=Power Off,alarm=Alarm"/>
		<parameter type="text" id="title1" name="Title row 1" value="ARTIST - ALBUM"/>
		<parameter type="text" id="title2" name="Title row 2" value="TITLE"/>
		<parameter type="text" id="timeformat" name="Time format" value="%H:%M"/>
		<parameter type="text" id="dateformat" name="Date format" value="%A %d %B"/>
		<parameter type="text" id="includedskins" name="Only include in skins (Empty means all)" value=""/>
	</template>
</informationscreen>

